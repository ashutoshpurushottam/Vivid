<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for weather forecast list item for today -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@drawable/today_touch_selector">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <com.eigendaksh.vivid.utils.widget.FontTextView
            android:id="@+id/list_item_date_textview"
            tools:text="22nd September, 2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LargeText"/>
        <com.eigendaksh.vivid.utils.widget.FontTextView
            android:id="@+id/list_item_high_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ExtremeText"
            tools:text="22 C"/>

        <com.eigendaksh.vivid.utils.widget.FontTextView
            android:id="@+id/list_item_low_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="18 C"
            style="@style/VeryLargeText"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal|bottom">

        <com.eigendaksh.vivid.utils.widget.FontTextView
            android:id="@+id/list_item_cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ranchi"
            style="@style/RegularText"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/list_item_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_cloudy"
            android:layout_gravity="center_horizontal"/>

        <com.eigendaksh.vivid.utils.widget.FontTextView
            android:id="@+id/list_item_forecast_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/VeryLargeText"
            tools:text="Cloudy"/>
    </LinearLayout>
</LinearLayout>